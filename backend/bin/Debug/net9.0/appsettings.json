{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

    "Serilog": {
      "MinimumLevel": "Debug",
      "WriteTo": [
        {
          "Name": "Console"
        },
        {
          "Name": "File",
          "Args": {
            "path": "logs/all-.log",
            "rollingInterval": "Day"
          }
        },
        {
          "Name": "File",
          "Args": {
            "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
            "path": "logs/important.json",
            "restrictedToMinimumLevel": "Warning"
          }
        }
      ]
    }

  }
